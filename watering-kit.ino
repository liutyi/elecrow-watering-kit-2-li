void setup()
{ 
  Wire.begin();
  RTC.begin();
  Serial.begin(9600);
  u8g2.begin();
  // declare relay as output
  for (int i = 0; i < num_sensors; i++)
  {
    pinMode(relay_pins[i], OUTPUT);
  }
  // declare pump as output
  pinMode(pump_pin, OUTPUT);
  // declare switch as input
  pinMode(button_pin, INPUT);
  u8g2.firstPage();
  do
  {
    draw_ad();
  } while ( u8g2.nextPage() );
}

void loop()
{
  // read the value from the moisture sensors:
  read_value();
  water_flower();
  int button_state = digitalRead(button_pin);
  if (button_state == 1)
  {
    u8g2.firstPage();
    do
    {
      drawTH();
      drawflower();
    } while ( u8g2.nextPage() );
    delay(500);
  }
  else
  {
    u8g2.firstPage();
    do
    {
      drawtime();
      u8g2.drawStr(18, 55 , "www.elecrow.com");
    } while (u8g2.nextPage());
    delay(500);
  }
  Watchdog.sleep(1000);  
}

//Set moisture value
void read_value()
{
/**************These is for resistor moisture sensor***********
  float value = analogRead(A0);
  moisture_values[i] = (value * 120) / 1023; delay(20);
  ...
 **********************************************************/
/************These is for capacity moisture sensor*********/
  for (int i = 0; i < num_sensors; i++) 
  {
    float value = analogRead(moisture_pins[i]);
    moisture_values[i] = map(value, 590, 360, 0, 100); 
    delay(20);
    if(moisture_values[i] < 0){
      moisture_values[i] = 0;
    }
  }
}

void water_flower()
{
  for (int i = 0; i < num_sensors; i++) 
  {
    if (moisture_values[i] < water_start_value)
    {
      digitalWrite(relay_pins[i], HIGH);
      relay_state_flags[i] = 1;
      delay(50);
      if (pump_state_flag == 0)
      {
        digitalWrite(pump_pin, HIGH);
        pump_state_flag = 1;
        delay(50);
      }
    }
    else if (moisture_values[i] > water_stop_value)
    {
      digitalWrite(relay_pins[i], LOW);
      relay_state_flags[i] = 0;
      delay(50);
    }
  }

  // If no more active relays, shut down the pump.
  int numActiveRelays = 0;
  for (int i = 0; i < num_sensors; i++) 
  {
    numActiveRelays += (relay_state_flags[i] > 0) ? 1 : 0;
  }
  if (numActiveRelays == 0)
  {
    digitalWrite(pump_pin, LOW);
    pump_state_flag = 0;
    delay(50);
  }
}

